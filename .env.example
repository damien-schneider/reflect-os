# Copy to `.env` (never commit `.env`). Secrets: `openssl rand -base64 32`

# Dokploy / Docker (docker-compose.yaml)
POSTGRES_PASSWORD="CHANGE_ME_STRONG_DB_PASSWORD"
PUBLIC_URL="http://localhost:3000"
ZERO_SERVER_URL="http://localhost:4848"

# Auth (32+ chars in production)
BETTER_AUTH_SECRET="GENERATE_32+_CHARS"
ZERO_AUTH_SECRET="GENERATE_32+_CHARS"

# Email (Resend)
RESEND_API_KEY="re_..."
EMAIL_FROM_ADDRESS="noreply@yourdomain.com"
EMAIL_FROM_NAME="Reflet"

# Optional
ZERO_ADMIN_PASSWORD="CHANGE_ME_ADMIN_PASSWORD"
ZERO_LOG_LEVEL="info" # debug|info|warn|error
ZERO_NUM_SYNC_WORKERS="2"
POLAR_ENVIRONMENT="sandbox" # sandbox|production
POLAR_ACCESS_TOKEN=""
POLAR_WEBHOOK_SECRET=""

# Drizzle Gateway
# Password for accessing the Drizzle Gateway web interface
# Used in both development (docker-compose.dev.yaml) and production (docker-compose.yaml)
MASTERPASS="CHANGE_ME_GATEWAY_PASSWORD"

# Local dev (only if not using Docker compose)
ZERO_UPSTREAM_DB="postgresql://user:password@127.0.0.1:5432/reflect"
VITE_PUBLIC_ZERO_SERVER="http://localhost:4848"
INTERNAL_API_URL="http://localhost:3001"
ZERO_REPLICA_FILE="/tmp/reflect_zero_replica.db"

# Local-only toggles (never enable unsafe flags in prod)
DEV_AUTH_ALLOW_UNVERIFIED_SIGNUP="false"
VITE_PUBLIC_REQUIRE_EMAIL_VERIFICATION="true"
