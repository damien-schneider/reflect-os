# Client-side environment variables (exposed to the browser)
VITE_PUBLIC_ZERO_SERVER='http://localhost:4848'
VITE_PUBLIC_API_SERVER='http://localhost:5173'

# Server-side environment variables
ZERO_UPSTREAM_DB="postgresql://user:password@127.0.0.1:5430/postgres"
ZERO_AUTH_SECRET="your-zero-auth-secret-here"
ZERO_REPLICA_FILE="/tmp/hello_zero_replica.db"
ZERO_LOG_LEVEL="debug"

# Better Auth
BETTER_AUTH_SECRET="your-better-auth-secret-here"
BETTER_AUTH_URL="http://localhost:5173"

# AWS (optional, for SST deployment)
# AWS_REGION="us-east-1"

# Custom domain (optional, for SST deployment with HTTPS)
# DOMAIN_NAME="your-domain.com"
# DOMAIN_CERT="arn:aws:acm:..."

# Polar Billing (https://polar.sh)
# Note: Sandbox and Production are completely separate accounts with different tokens!
# Use sandbox tokens with POLAR_ENVIRONMENT="sandbox", production tokens with "production"
POLAR_ACCESS_TOKEN=""
POLAR_ENVIRONMENT="sandbox"
# POLAR_WEBHOOK_SECRET=""           # Get this when creating a webhook in Polar dashboard
