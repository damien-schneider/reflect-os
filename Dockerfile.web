# Web Application Dockerfile
# Builds the Vite/React frontend with Hono API server

FROM node:22-alpine AS base

# Install dependencies
RUN apk add --no-cache libc6-compat python3 make g++

WORKDIR /app

# Install bun
RUN npm install -g bun

# Copy package files
COPY package.json bun.lock* ./
COPY apps/web/package.json ./apps/web/
COPY packages/db/package.json ./packages/db/

# Install dependencies
RUN bun install

# Copy source code
COPY . .

# Build stage
FROM base AS builder

# Use placeholder value for build - will be replaced at runtime
# This allows the same image to work with any domain configuration
ENV VITE_PUBLIC_ZERO_SERVER=__VITE_PUBLIC_ZERO_SERVER__

WORKDIR /app

# Build the database package
RUN cd packages/db && bun run build

# Build the web application
RUN cd apps/web && bun run build

# Production stage
FROM node:22-alpine AS runner

WORKDIR /app

# Install runtime dependencies
RUN apk add --no-cache libc6-compat wget && \
    npm install -g bun

# Copy application files
COPY --from=builder /app/apps/web/dist ./dist
COPY --from=builder /app/apps/web/api ./api
COPY --from=builder /app/apps/web/server.ts ./server.ts
COPY --from=builder /app/apps/web/package.json ./package.json
COPY --from=builder /app/apps/web/src/env ./src/env
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/packages ./packages

# Copy and prepare entrypoint
COPY --from=builder /app/apps/web/start.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

EXPOSE 3000

HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:3000 || exit 1

ENTRYPOINT ["/entrypoint.sh"]
