# =============================================================================
# BACKEND API SERVER - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values.
# Required variables are marked, optional have defaults or are for specific features.
# =============================================================================

# =============================================================================
# DATABASE & ZERO SYNC (Required)
# =============================================================================

# PostgreSQL connection string for Zero upstream database
# Format: postgresql://user:password@host:port/database
ZERO_UPSTREAM_DB="postgresql://user:password@127.0.0.1:5430/postgres"

# Secret key for Zero JWT authentication
# IMPORTANT: Use at least 32 characters in production!
ZERO_AUTH_SECRET="your-zero-auth-secret-min-32-chars-in-prod"

# Path to Zero replica SQLite file (local development only)
ZERO_REPLICA_FILE="/tmp/reflect_zero_replica.db"

# Zero cache server log level: debug | info | warn | error
ZERO_LOG_LEVEL="debug"

# =============================================================================
# AUTHENTICATION (Required)
# =============================================================================

# Secret key for Better Auth sessions
# IMPORTANT: Use at least 32 characters in production!
BETTER_AUTH_SECRET="your-better-auth-secret-min-32-chars-in-prod"

# Base URL for Better Auth callbacks
# Development: http://localhost:5173
# Production: https://yourdomain.com
BETTER_AUTH_URL="http://localhost:5173"

# =============================================================================
# EMAIL - RESEND (Optional)
# =============================================================================
# Without these, emails won't be sent. Get your API key from:
# https://resend.com/api-keys

# Resend API key
RESEND_API_KEY=""

# Sender email address
# Development: Use onboarding@resend.dev (Resend's test domain)
# Production: Use your verified domain email (e.g., noreply@yourdomain.com)
EMAIL_FROM_ADDRESS="onboarding@resend.dev"

# Sender display name
EMAIL_FROM_NAME="Reflet"

# =============================================================================
# BILLING - POLAR (Optional)
# =============================================================================
# For subscription management. Get tokens from https://polar.sh
# Note: Sandbox and Production are COMPLETELY separate accounts with different tokens!

# Polar organization access token
POLAR_ACCESS_TOKEN=""

# Environment: sandbox (testing) | production (live payments)
POLAR_ENVIRONMENT="sandbox"

# Webhook secret - get this when creating a webhook in Polar dashboard
# POLAR_WEBHOOK_SECRET=""

# =============================================================================
# SERVER (Optional - has defaults)
# =============================================================================

# Port for the backend server (default: 3001)
# PORT=3001

# Node environment: development | production | test
# NODE_ENV="development"
