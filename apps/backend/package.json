{
  "name": "@repo/backend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./client": "./src/client.ts"
  },
  "scripts": {
    "dev": "dotenv -e ../../.env -- bun run --watch src/server.ts",
    "start": "bun run src/server.ts",
    "build": "bun build src/server.ts --outdir dist --target bun",
    "typecheck": "tsc --noEmit",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "@polar-sh/better-auth": "^1.6.3",
    "@polar-sh/sdk": "^0.42.1",
    "@repo/auth": "workspace:*",
    "@repo/db": "workspace:*",
    "@repo/email": "workspace:*",
    "@repo/polar": "workspace:*",
    "@rocicorp/zero": "0.25.5",
    "@t3-oss/env-core": "^0.13.10",
    "better-auth": "^1.4.9",
    "hono": "^4.11.1",
    "jose": "^6.1.3",
    "pg": "^8.16.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "@vitest/ui": "^4.0.16",
    "bun-types": "^1.3.5",
    "dotenv-cli": "^11.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
