{
  "name": "reflect-os-zero",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "./scripts/dev-setup.sh && dotenv -e .env -- turbo dev dev:zero-cache --filter=@repo/web --filter=@repo/backend",
    "dev:setup": "./scripts/dev-setup.sh",
    "dev:servers": "dotenv -e .env -- turbo dev dev:zero-cache --filter=@repo/web --filter=@repo/backend",
    "dev:stop": "docker compose --profile dev stop && lsof -ti:4848,4849,5173,3001 | xargs kill -9 2>/dev/null || true",
    "dev:clean": "docker compose --profile dev down -v && bun run zero:clean && lsof -ti:4848,4849,5173,3001 | xargs kill -9 2>/dev/null || true",
    "build": "bun run validate:polar && dotenv -e .env -- turbo build",
    "build:skip-validation": "dotenv -e .env -- turbo build",
    "validate:polar": "dotenv -e .env -- bun run scripts/validate-polar.ts",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "check-types": "turbo check-types",
    "format": "biome check --write .",
    "format:unsafe": "biome check --write --unsafe .",
    "format:check": "biome check .",
    "email:dev": "bun --filter @repo/email email:dev",
    "db:push": "dotenv -e .env -- bun --filter @repo/db db:push",
    "db:push:dev": "dotenv -e .env -- bun --filter @repo/db db:push:dev",
    "db:generate": "dotenv -e .env -- bun --filter @repo/db db:generate",
    "db:migrate": "dotenv -e .env -- bun --filter @repo/db db:migrate",
    "db:studio": "dotenv -e .env -- bun --filter @repo/db db:studio",
    "db:seed": "dotenv -e .env -- bun --filter @repo/db db:seed",
    "zero:deploy-permissions": "cd apps/web && dotenv -e ../../.env -- bun x zero-deploy-permissions -p src/schema.ts",
    "zero:clean": "rm -rf /tmp/reflect_zero_replica.db*",
    "docker:logs": "docker compose --profile dev logs -f",
    "tunnel": "ngrok http 5173",
    "prepare": "husky",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "e2e": "PLAYWRIGHT_BUILD_MODE=1 bunx playwright test",
    "e2e:ui": "PLAYWRIGHT_BUILD_MODE=1 bunx playwright test --ui",
    "e2e:headed": "PLAYWRIGHT_BUILD_MODE=1 bunx playwright test --headed",
    "e2e:dev": "bunx playwright test --project=chromium",
    "e2e:dev:headed": "bunx playwright test --project=chromium --headed",
    "e2e:dev:debug": "bunx playwright test --project=chromium --debug",
    "e2e:dev:ui": "bunx playwright test --ui"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@vitest/ui": "^4.0.17",
    "dotenv-cli": "^11.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "turbo": "^2.7.4",
    "ultracite": "7.0.11",
    "vitest": "^4.0.17"
  },
  "trustedDependencies": [
    "@rocicorp/zero-sqlite3"
  ],
  "pnpm": {
    "onlyBuiltDependencies": [
      "@rocicorp/zero-sqlite3"
    ]
  },
  "overrides": {
    "esbuild": "0.25.0",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "packageManager": "bun@1.3.2"
}
