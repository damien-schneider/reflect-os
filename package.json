{
  "name": "reflect-os-zero",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run dev:kill && docker compose -f docker-compose.dev.yaml up -d && bun run dev:db && dotenv -e .env -- turbo dev",
    "dev:db": "./scripts/wait-for-db.sh && bun run db:push:dev && bun run zero:deploy-permissions",
    "dev:kill": "pkill -f 'zero-cache' 2>/dev/null || true; pkill -f 'vite' 2>/dev/null || true; pkill -f 'apps/backend' 2>/dev/null || true",
    "dev:backend": "bun --filter @repo/backend dev",
    "dev:web": "bun --filter @repo/web dev",
    "dev:zero-cache": "bun --filter @repo/web dev:zero-cache",
    "build": "bun run validate:polar && dotenv -e .env -- turbo build",
    "build:skip-validation": "dotenv -e .env -- turbo build",
    "validate:polar": "dotenv -e .env -- bun run scripts/validate-polar.ts",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "check-types": "turbo check-types",
    "format": "biome check --write .",
    "format:unsafe": "biome check --write --unsafe .",
    "format:check": "biome check .",
    "email:dev": "bun --filter @repo/email email:dev",
    "db:push": "dotenv -e .env -- bun --filter @repo/db db:push",
    "db:push:dev": "dotenv -e .env -- bun --filter @repo/db db:push:dev",
    "db:generate": "dotenv -e .env -- bun --filter @repo/db db:generate",
    "db:migrate": "dotenv -e .env -- bun --filter @repo/db db:migrate",
    "db:studio": "dotenv -e .env -- bun --filter @repo/db db:studio",
    "db:seed": "dotenv -e .env -- bun --filter @repo/db db:seed",
    "zero:deploy-permissions": "cd apps/web && dotenv -e ../../.env -- bun x zero-deploy-permissions -p src/schema.ts",
    "docker:start": "docker compose -f docker-compose.dev.yaml up -d",
    "docker:stop": "docker compose -f docker-compose.dev.yaml down",
    "docker:logs": "docker compose -f docker-compose.dev.yaml logs -f",
    "docker:clean": "docker compose -f docker-compose.dev.yaml down -v",
    "dev:stop": "bun run dev:kill && docker compose -f docker-compose.dev.yaml stop",
    "zero:clean": "source .env && rm -rf \"${ZERO_REPLICA_FILE}\"*",
    "tunnel": "ngrok http 5173",
    "prepare": "husky",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "e2e": "PLAYWRIGHT_BUILD_MODE=1 bunx playwright test",
    "e2e:ui": "PLAYWRIGHT_BUILD_MODE=1 bunx playwright test --ui",
    "e2e:headed": "PLAYWRIGHT_BUILD_MODE=1 bunx playwright test --headed",
    "e2e:dev": "bunx playwright test --project=chromium",
    "e2e:dev:headed": "bunx playwright test --project=chromium --headed",
    "e2e:dev:debug": "bunx playwright test --project=chromium --debug",
    "e2e:dev:ui": "bunx playwright test --ui"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.9",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@vitest/ui": "^4.0.16",
    "dotenv-cli": "^11.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "turbo": "^2.5.4",
    "ultracite": "6.3.10",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "sst": "3.17.25"
  },
  "trustedDependencies": [
    "@rocicorp/zero-sqlite3"
  ],
  "pnpm": {
    "onlyBuiltDependencies": [
      "@rocicorp/zero-sqlite3"
    ]
  },
  "_": "For some reason, sst requires esbuild 0.25.0 when deploying the permission deployer",
  "overrides": {
    "esbuild": "0.25.0",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "packageManager": "bun@1.3.2"
}
