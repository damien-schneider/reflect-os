{
  "name": "reflect-os-zero",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:backend": "bun --filter @repo/backend dev",
    "dev:web": "bun --filter @repo/web dev",
    "dev:zero-cache": "bun --filter @repo/web dev:zero-cache",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "check-types": "turbo check-types",
    "format": "biome check --write .",
    "format:unsafe": "biome check --write --unsafe .",
    "format:check": "biome check .",
    "dev:docker": "bun --filter @repo/docker dev",
    "email:dev": "bun --filter @repo/email email:dev",
    "db:push": "bun --filter @repo/db db:push",
    "db:generate": "bun --filter @repo/db db:generate",
    "db:migrate": "bun --filter @repo/db db:migrate",
    "db:studio": "bun --filter @repo/db db:studio",
    "db:seed": "bun --filter @repo/db db:seed",
    "docker:start": "bun --filter @repo/docker start",
    "docker:stop": "bun --filter @repo/docker stop",
    "docker:logs": "bun --filter @repo/docker logs",
    "docker:clean": "bun --filter @repo/docker clean",
    "zero:clean": "source .env && rm -rf \"${ZERO_REPLICA_FILE}\"*",
    "tunnel": "ngrok http 5173",
    "prepare": "husky",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "e2e": "PLAYWRIGHT_BUILD_MODE=1 bunx playwright test",
    "e2e:ui": "PLAYWRIGHT_BUILD_MODE=1 bunx playwright test --ui",
    "e2e:headed": "PLAYWRIGHT_BUILD_MODE=1 bunx playwright test --headed",
    "e2e:dev": "bunx playwright test --project=chromium",
    "e2e:dev:headed": "bunx playwright test --project=chromium --headed",
    "e2e:dev:debug": "bunx playwright test --project=chromium --debug",
    "e2e:dev:ui": "bunx playwright test --ui"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@vitest/ui": "^4.0.15",
    "dotenv-cli": "^11.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "turbo": "^2.5.4",
    "ultracite": "6.3.10",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "sst": "3.17.25"
  },
  "trustedDependencies": [
    "@rocicorp/zero-sqlite3"
  ],
  "pnpm": {
    "onlyBuiltDependencies": [
      "@rocicorp/zero-sqlite3"
    ]
  },
  "_": "For some reason, sst requires esbuild 0.25.0 when deploying the permission deployer",
  "overrides": {
    "esbuild": "0.25.0"
  },
  "packageManager": "bun@1.3.2"
}
