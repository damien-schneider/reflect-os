{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": ["NODE_ENV", "VITE_PUBLIC_ZERO_SERVER"]
    },
    "@repo/db#db:push": {
      "cache": false,
      "passThroughEnv": ["ZERO_UPSTREAM_DB"]
    },
    "@repo/backend#dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "env": [
        "ZERO_UPSTREAM_DB",
        "ZERO_AUTH_SECRET",
        "ZERO_REPLICA_FILE",
        "ZERO_LOG_LEVEL",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "POLAR_ACCESS_TOKEN",
        "POLAR_WEBHOOK_SECRET",
        "POLAR_ENVIRONMENT",
        "RESEND_API_KEY",
        "EMAIL_FROM_ADDRESS",
        "EMAIL_FROM_NAME",
        "DEV_AUTH_ALLOW_UNVERIFIED_SIGNUP",
        "PORT",
        "NODE_ENV"
      ]
    },
    "@repo/web#dev:zero-cache": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "passThroughEnv": [
        "ZERO_UPSTREAM_DB",
        "ZERO_AUTH_SECRET",
        "ZERO_REPLICA_FILE",
        "ZERO_LOG_LEVEL",
        "ZERO_MUTATE_URL",
        "ZERO_QUERY_URL",
        "ZERO_QUERY_FORWARD_COOKIES",
        "ZERO_MUTATE_FORWARD_COOKIES"
      ]
    },
    "@repo/web#dev:vite": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "env": [
        "VITE_PUBLIC_ZERO_SERVER",
        "VITE_PUBLIC_REQUIRE_EMAIL_VERIFICATION",
        "INTERNAL_API_URL",
        "PORT",
        "NODE_ENV"
      ]
    },
    "@repo/web#dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "env": [
        "VITE_PUBLIC_ZERO_SERVER",
        "VITE_PUBLIC_REQUIRE_EMAIL_VERIFICATION",
        "INTERNAL_API_URL",
        "PORT",
        "NODE_ENV"
      ],
      "passThroughEnv": [
        "ZERO_UPSTREAM_DB",
        "ZERO_AUTH_SECRET",
        "ZERO_REPLICA_FILE",
        "ZERO_LOG_LEVEL",
        "ZERO_MUTATE_URL",
        "ZERO_QUERY_URL",
        "ZERO_QUERY_FORWARD_COOKIES",
        "ZERO_MUTATE_FORWARD_COOKIES"
      ]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "check-types": {
      "dependsOn": ["^build"]
    },
    "db:push": {
      "cache": false,
      "passThroughEnv": ["ZERO_UPSTREAM_DB"]
    },
    "db:seed": {
      "cache": false,
      "passThroughEnv": ["ZERO_UPSTREAM_DB"]
    },
    "db:generate": {
      "outputs": ["migrations/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "test:watch": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "e2e": {
      "dependsOn": ["^build"],
      "cache": false,
      "env": ["NODE_ENV"]
    }
  }
}
